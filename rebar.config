{erl_opts, [debug_info
           ,{d, hardlog}
            %% ,warnings_as_errors
           ,{parse_transform, lager_transform}
           ,bin_opt_info
           ]}.

{deps, [{lager, "3.5.1"},
        {lager_syslog, {git, "https://github.com/basho/lager_syslog.git",{tag, "3.0.3"}}},
        {folsom, "0.8.3"}
       ]}.

{cover_enabled, true}.
{cover_excl_mods, [server_sup
                  ,db_sup]}.

{relx, [{release,
         {egg, "0.0.1"},
         [
          {runtime_tools, load},
          lager,
          lager_syslog,
          common,
          {mnesia, load},
          tester,
          db,
          server,
          singleton
         ]
        },
        {dev_mode, false},
        {include_erts, false},
        {extended_start_script, true},
        {sys_config, "config/dev_sys.config"},
        {vm_args, "config/vm.args"}
       ]}.

{overrides, [
   %%
   %% required to assemble native library
   {override, syslog, [
      {plugins, [pc]},
      {artifacts, ["priv/syslog_drv.so"]},
      {provider_hooks, [
         {post, [
            {compile, {pc, compile}},
            {clean, {pc, clean}}
         ]}
      ]}
   ]}
]}.

{profiles, [{prod1, [
                    {relx, [
                            {include_erts, true},
                            {sys_config, "config/prod1_sys.config"}
                           ]}
                   ]},
            {prod2, [
                    {relx, [
                            {include_erts, true},
                            {sys_config, "config/prod2_sys.config"}
                           ]}
                   ]},
            {prod3, [
                    {relx, [
                            {include_erts, true},
                            {sys_config, "config/prod3_sys.config"}
                           ]}
                   ]},
            {test, [{deps, [{meck, "0.8.7"}]}]},
            {tester, [
                   {relx, [{release,
                           {egg, "0.0.1"},
                           [{runtime_tools, load},
                            lager,
                            lager_syslog,
                            common,
                            tester]}
                          ]}
            ]}
]}.

{plugins, [rebar3_run, rebar3_hex]}.
